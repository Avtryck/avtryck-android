<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/se.tidensavtryck"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<com.markupartist.android.widget.ActionBar
		android:id="@+id/actionbar" app:title="@string/app_name" style="@style/ActionBar" />
	
	<TextView android:id="@+id/android:empty" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/no_routes" />
	
	<ListView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/android:list"></ListView>


</LinearLayout>
